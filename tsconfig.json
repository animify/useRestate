{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "declaration": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "importHelpers": true,
    "outDir": "build",
    "target": "es6",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
