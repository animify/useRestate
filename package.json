    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.11",
    "@types/react-dom": "^16.0.11",
    "changelog.md": "^1.1.0",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "microbundle": "^0.8.1",
    "parcel": "^1.10.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.1"
  },
  "files": [
    "bundle",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
